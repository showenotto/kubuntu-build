// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle",
    },
  },

  //VIM
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j j": "vim::NormalBefore",
    },
  },
  {
    "context": "(Workspace || Editor || ProjectPanel || AgentPanel) && !(vim_mode == insert)",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "space u": "workspace::ToggleRightDock",
    },
  },
  {
    "context": "Editor && vim_mode && !menu",
    "bindings": {
      "ctrl-a": "editor::SelectAll",
      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste",
      "ctrl-x": "editor::Cut",
      "ctrl-z": "editor::Redo",
      "ctrl-b": null,
      "ctrl-d": null,
      "ctrl-k": null,
      "ctrl-n": null,
      "ctrl-p": null,
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-t": "terminal_panel::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-`": "project_symbols::Toggle"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-t": "workspace::NewTerminal"
    }
  }
]
